@model List<NHibernateApplicationMVC.Models.EmployeeDetails>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row" style="padding-top:3%">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="color:#00a499">
                <b> <u>ALl Employee Record</u></b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <div class="table-responsive ScrollBar">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="col-md-3">Name</th>
                                    <th class="col-lg-3">Address</th>
                                    <th class="col-lg-5">Birth Date</th>
                                    <th class="col-lg-3">Blood Group</th>
                                    <th class="col-lg-3">Mobile No</th>
                                    <th class="col-lg-3">Emergency No</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                           @item.Name
                                        </td>
                                        <td>@item.Address</td>
                                        <td>@item.BirthDate</td>
                                        <td>@item.BloodGroup</td>
                                        <td>@item.MobileNo</td>
                                        <td>@item.EmergencyNo</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->
    </div>
<!-- /.col-lg-12 -->
</div>